#! /usr/bin/env bash
# This script permit to create in one command an Python env

WORKINGDIR=$(pwd)
VENVDIR="$HOME/venv"
PYVERSION="py2"
PROJECT=$1
[[ $PROJECT == "" ]] && PROJECT=$(basename $(pwd))

VENVNAME="$PROJECT-$PYVERSION"
VENV="$VENVDIR/$VENVNAME"

virtualenv2 $VENV

.  $VENV/bin/activate
pip install -U setuptools pip pycodestyle "pylint<2"
ln -s $VENV $WORKINGDIR/venv2
